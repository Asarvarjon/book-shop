<%- include("./parts/header.ejs") %>
<% var data = data || [] %> 

<h2 class="text-center mt-4">
    Admin Panel
</h2>


<div class="container mt-4 mb-4">
    <form id="form" method="POST" enctype="application/x-www-form-urlencoded" class="w-100 d-flex flex-column align-items-center justify-content-center" autocomplete="off">
        <div class="row w-100">
            <div class="col-lg-6">
                <input id="name" type="text" name="name" placeholder="Book name" class="form-control">
                <input id="price" type="number" name="price" placeholder="Price" class="form-control mt-3"> 
                <input id="author" type="text" name="author" placeholder="Author" class="form-control mt-3">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload photo</label>
                    <input class="form-control" name="file" type="file" id="file">
                  </div>
            </div>
    
            <div class="col-lg-6">
                <textarea id="textarea"  class="form-control" style="height: 250px; resize: none;"  placeholder="Description"></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            Submit
        </button>
    </form>
    
</div>


<h3 class="mt-2 mb-2 text-center">
    Uploaded books
</h3>

<p class="h5 mt-2 text-center">Do you want to see orders <a href="/order">Click here</a></p>

<div class="container mt-5">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Price</th>
                <th>Description</th>
            </tr>  
        </thead>
    
        <tbody>
            <% for (let book of data.reverse()){ %> 
                <tr>
                    <td>
                        <%= book.name %> 
                    </td>
                    <td>
                        <%= book.author %> 
                    </td>
                    <td>
                        <%= book.price %> 
                    </td>
                    <td>
                        <%= book.content %> 
                    </td>
                </tr>
            <% } %> 
        </tbody>
    </table>
    
</div>

<%- include("./parts/other.ejs") %> 